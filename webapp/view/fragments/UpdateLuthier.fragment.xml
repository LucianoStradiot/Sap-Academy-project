<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <Dialog id="_IDGenDialog12" title="Actualizar datos del Luthier" state="Information" titleAlignment="Center" contentWidth="30%">
        <content>
            <form:SimpleForm id="SimpleFormDisplay4802" editable="false" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                <form:content >
                    <Label id="_IDGenLabel22" text="Nombre" class="labelForm"/>
                    <Input id="nombreInput2" value="{UpdateLuthier>/Nombre}" valueLiveUpdate="true"/>
                    <Label id="_IDGenLabel32" text="Apellido" class="labelForm"/>
                    <Input id="apellidoInput2" value="{UpdateLuthier>/Apellido}" valueLiveUpdate="true"/>
                    <Label id="_IDGenLabel42" text="Localidad" class="labelForm"/>
                    <Input id="localidadInput2" value="{UpdateLuthier>/Localidad}" valueLiveUpdate="true"/>
                    <Label id="_IDGenLabel52" text="Tipo de Instrumento" class="labelForm"/>
                    <Select id="tipoInstrumentoSelect" selectedKey="{UpdateLuthier>/TipoInstrumento}">
                        <core:Item id="_IDGenItem1" key="Cuerdas" text="Cuerdas"/>
                        <core:Item id="_IDGenItem2" key="Vientos" text="Vientos"/>
                        <core:Item id="_IDGenItem3" key="Percusión" text="Percusión"/>
                    </Select>
                    <Label id="_IDGenLabel62" text="Descripción" class="labelForm"/>
                    <TextArea id="descripcionInput2" value="{UpdateLuthier>/Descripcion}" valueLiveUpdate="true" maxLength="200"/>
                </form:content>
                <form:layoutData>
                    <FlexItemData id="_IDGenFlexItemData12" shrinkFactor="0" backgroundDesign="Solid" styleClass="sapContrastPlus"/>
                </form:layoutData>
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button id="_IDGenButton12" text="Actualizar" press=".onUpdateLuthierPress" type="Emphasized" />
        </beginButton>
        <endButton>
            <Button id="_IDGenButton22" text="Cancelar" press=".onCloseUpdateLuthierPress" type="Reject" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

