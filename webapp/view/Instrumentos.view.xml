<mvc:View id="_IDGenView1" height="100%" controllerName="aca20241q.controller.Instrumentos"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page id="Instrumentos" showHeader="false" enableScrolling="false">
        <FlexBox id="page2" renderType="Bare" wrap="NoWrap" alignItems="Start" justifyContent="Center">
            <VBox id="_IDGenVBox1" width="100%">
                <VBox id="_IDGenVBox2" justifyContent="Center" class="containerImage">
                    <Image id="_IDGenImage1" src="/images/banner.jpg" width="100%" alt="Banner Image" densityAware="false" decorative="false"/>
                </VBox>
                <ObjectHeader id="_IDGenObjectHeader1" title="Luthier Shop" responsive="true" class="sapUiResponsivePadding--header ">
                    <ObjectAttribute id="_IDGenObjectAttribute1" text="Bienvenidos!" />
                    <ObjectAttribute id="_IDGenObjectAttribute2" text="Aquí encontrarás todo tipo de instrumentos musicales de diferentes gamas y géneros." />
                </ObjectHeader>
                <IconTabHeader id="_IDGenIconTabBar1" select="handleNav" class="tabContainer">
                    <items>
                        <IconTabFilter id="HomeI" key="Home" text="Home" />
                        <IconTabFilter id="LuthiersTableI" key="Luthiers" text="Luthiers" />
                        <IconTabFilter id="InstrumentosI" key="Instrumentos" text="Instrumentos" />
                    </items>
                </IconTabHeader >
            </VBox>
        </FlexBox>
        <Table id="_IDGenTable1" items="{/InstrumentoSet}">
            <headerToolbar>
                <OverflowToolbar id="_IDGenOverflowToolbar1">
                    <Title id="_IDGenTitle1" text="Instrumentos" level="H2"/>
                    <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                    <OverflowToolbarButton id="_IDGenOverflowToolbarButton1" type="Transparent" icon="sap-icon://add" press="handleNewItemAdd"/>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column id="_IDGenColumn1" width="12em">
                    <Text id="_IDGenText1" text="Id Luthier"/>
                </Column>
                <Column id="_IDGenColumn2" width="12em">
                    <Text id="_IDGenText2" text="Nombre"/>
                </Column>
                <Column id="_IDGenColumn3" width="12em">
                    <Text id="_IDGenText3" text="Tipo"/>
                </Column>
                <Column id="_IDGenColumn4" width="12em">
                    <Text id="_IDGenText4" text="Año fabricación"/>
                </Column>
                <Column id="_IDGenColumn5" width="12em">
                    <Text id="_IDGenText5" text="Precio"/>
                </Column>
                <Column id="_IDGenColumn6" width="12em">
                    <Text id="_IDGenText6" text="Descripción"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem1">
                    <cells>
                        <Text id="IdLuthiers" text="{IdLuthier}"/>
                        <Text id="NombreInstrumento" text="{NombreInstrumento}"/>
                        <Text id="TipoInstrumento" text="{TipoInstrumento}"/>
                        <Text id="AnioFabricacion" text="{AnioFabricacion}"/>
                        <Text id="Precio" text="USD {Precio}"/>
                        <Text id="Descripcionn" text="{Descripcion}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <footer>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer2" />
                <Text id="_IDGenText8" text="Contacto: info@luthiershop.com" />
                <Button id="_IDGenButton1" icon="sap-icon://linkedin" press="onLinkedInPress" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>