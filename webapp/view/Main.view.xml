<mvc:View xmlns:layout="sap.ui.layout" controllerName="aca20241q.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}" showHeader="false">
        <VBox id="_IDGenVBox1">
        <ObjectHeader id="_IDGenObjectHeader1" title="Luthier Shop" responsive="true" class="sapUiResponsivePadding--header">
            <ObjectAttribute id="_IDGenObjectAttribute1" text="Bienvenidos!" />
            <ObjectAttribute id="_IDGenObjectAttribute2" text="Aquí encontrarás todo tipo de instrumentos musicales de diferentes gamas y géneros." />
        </ObjectHeader>
        <IconTabHeader id="_IDGenIconTabHeader1" mode="Inline" select="handleTabHeader">
            <items>
                <IconTabFilter id="HomeI" key="Home" text="Home" />
                <IconTabFilter id="LuthiersTableI" key="LuthiersTable" text="Luthier´s" />
                <IconTabFilter id="InstrumentosI" key="Instrumentos" text="Instrumentos" />
            </items>
        </IconTabHeader>
    </VBox>
    <NavContainer id="navContainer" visible="true">
            <pages>
                <!-- Página de inicio -->
                <core:Fragment fragmentName="aca20241q.view.fragments.Home" id="Home" />

                <!-- Página de tabla de Luthiers -->
                <core:Fragment fragmentName="aca20241q.view.fragments.LuthiersTable" id="LuthiersTable" />
            </pages>
        </NavContainer>
    </Page>
</mvc:View>
