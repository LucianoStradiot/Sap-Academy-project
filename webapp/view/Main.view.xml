<mvc:View xmlns:layout="sap.ui.layout" controllerName="aca20241q.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="_IDGenPage1" class="generalImage" enableScrolling="false" showHeader="false">
        <FlexBox id="page2" renderType="Bare" wrap="NoWrap" alignItems="Start" justifyContent="Center">
            <VBox id="_IDGenVBox1" width="100%">
                <VBox id="_IDGenVBox2" justifyContent="Center" class="containerImage">
                    <Image id="_IDGenImage1" src="/images/banner.jpg" width="100%" alt="Banner Image" densityAware="false" decorative="false"/>
                </VBox>
                <ObjectHeader id="_IDGenObjectHeader1" title="Luthier Shop" responsive="true" class="sapUiResponsivePadding--header ">
                    <ObjectAttribute id="_IDGenObjectAttribute1" text="Bienvenidos!" />
                    <ObjectAttribute id="_IDGenObjectAttribute2" text="Aquí encontrarás todo tipo de instrumentos musicales de diferentes gamas y géneros." />
                </ObjectHeader>
                <IconTabHeader id="_IDGenIconTabBar1" select="handleNav" class="IconTabHeader">
                    <items>
                        <IconTabFilter id="HomeI" key="RouteMain" text="Home" class="IconTabHeader"/>
                        <IconTabFilter id="LuthiersTableI" key="Luthiers" text="Luthiers" class="IconTabHeader"/>
                    </items>
                </IconTabHeader >
            </VBox>
        </FlexBox>
        <FlexBox id="_IDGenFlexBox1">
            <FlexBox id="_IDGenHBox1" class="sapUiLargeMargin containerFather">
                <VBox id="_IDGenVBox12">
                    <Image id="_IDGenImage12" src="/images/logo.png" class="logo" decorative="false" alt="Luthier Shop Logo" densityAware="false" />
                </VBox>
                <VBox id="_IDGenVBox22" class="containerChild">
                    <Text id="_IDGenText1" text="¡Bienvenido a Luthier Shop! Un espacio virtual dedicado a la creatividad y habilidad de los constructores de instrumentos musicales. Este portal ofrece a los luthiers de todo el mundo la oportunidad de registrar sus creaciones únicas y presentarlas a una audiencia global de amantes de la música y músicos profesionales.." class="description sapUiLargeMarginBottom" wrappingType="Hyphenated" />
                    <Text id="_IDGenText22" text="Unite y comparí tu pasión por la construcción de instrumentos musicales con el mundo. Ya sea que seas un luthier experimentado o estés empezando tu viaje en la fabricación de instrumentos, aquí encontrarás un espacio para inspirarte, conectarte y crecer como artista." class="description" wrappingType="Hyphenated" />
                </VBox>
            </FlexBox>
        </FlexBox>
        <footer>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Text id="_IDGenText2" text="Contacto: info@luthiershop.com" />
                <Button id="_IDGenButton1" icon="sap-icon://linkedin" press="onLinkedInPress" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
