<mvc:View id="_IDGenView1" height="100%" controllerName="aca20241q.controller.Luthiers"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f">
    <Page id="_IDGenPage1" class="generalImage" showHeader="false">
        <FlexBox id="page2" renderType="Bare" wrap="NoWrap" alignItems="Start" justifyContent="Center">
            <VBox id="_IDGenVBox12" width="100%">
                <VBox id="_IDGenVBox22" justifyContent="Center" class="containerImage">
                    <Image id="_IDGenImage12" src="/images/banner.jpg" width="100%" alt="Banner Image" densityAware="false" decorative="false"/>
                </VBox>
                <ObjectHeader id="_IDGenObjectHeader1" title="Luthier Shop" responsive="true" class="sapUiResponsivePadding--header ">
                    <ObjectAttribute id="_IDGenObjectAttribute1" text="Bienvenidos!" />
                    <ObjectAttribute id="_IDGenObjectAttribute2" text="Aquí encontrarás todo tipo de instrumentos musicales de diferentes gamas y géneros." />
                </ObjectHeader>
                <IconTabHeader id="_IDGenIconTabBar1" select="handleNav" class="tabContainer">
                    <items>
                        <IconTabFilter id="HomeI" key="Home" text="Home" />
                        <IconTabFilter id="LuthiersTableI" key="Luthiers" text="Luthiers" />
                        <IconTabFilter id="InstrumentosI" key="Instrumentos" text="Instrumentos" />
                    </items>
                </IconTabHeader >
            </VBox>
        </FlexBox>
        <VBox id="_IDGenVBox5">
            <OverflowToolbar id="IDGenOverflowToolbar12" design="Transparent" style="Clear">
                <ToolbarSpacer id="IDGenToolbarSpacer12"/>
                <OverflowToolbarButton id="idAddButton2" text="Add Luthier" type="Emphasized" icon="sap-icon://add" press="createLuthier"/>
            </OverflowToolbar>
        </VBox>
        <f:GridList id="gridList" mode="SingleSelectMaster" busyIndicatorDelay="true" selectionChange="onPress" delete="onDelete" class="sapUiResponsiveContentPadding">
            <f:customLayout>
                <grid:GridBasicLayout id="_IDGenGridBasicLayout1" gridTemplateColumns="repeat(auto-fit, minmax(12rem, 1fr))" gridGap="1rem" />
            </f:customLayout>
            <f:GridListItem id="_IDGenGridListItem1" type="{type}">
                <VBox id="_IDGenVBox1" height="100%">
                    <Image id="_IDGenImage1" src="/images/logo.png" width="100%" class="imageDisplayBlock" />
                    <HBox id="_IDGenHBox2" height="100%" class="sapUiSmallMargin" alignItems="Center" visible="{= ${onlyImage} ? false : true }">
                        <Image id="_IDGenImage2" src="/images/logo.png" width="3rem" class="sapUiSmallMarginEnd" />
                        <VBox id="_IDGenVBox4" width="100%" direction="Row" justifyContent="SpaceBetween">
                            <VBox id="_IDGenVBox2" alignContent="Stretch">
                                <Title id="_IDGenTitle1" text="{Nombre}" wrapping="true" />
                                <Label id="_IDGenLabel1" text="{Apellido}" wrapping="true" />
                            </VBox>
                            <VBox id="_IDGenVBox3">
                                <Button id="_IDGenButton4" type="Default" icon="sap-icon://edit" press="onPress"/>
                            </VBox>
                        </VBox>
                    </HBox>
                </VBox>
            </f:GridListItem>
        </f:GridList>
        <footer>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Text id="_IDGenText2" text="Contacto: info@luthiershop.com" />
                <Button id="_IDGenButton1" icon="sap-icon://linkedin" press="onLinkedInPress" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
