<mvc:View id="_IDGenView1" height="100%" controllerName="aca20241q.controller.Luthiers"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout">
    <l:VerticalLayout id="_IDGenVerticalLayout1" width="100%">
        <ScrollContainer id="_IDGenScrollContainer1" height="100%" vertical="true">
            <VBox id="_IDGenVBox5">
                <OverflowToolbar id="IDGenOverflowToolbar12" design="Transparent" style="Clear">
                    <ToolbarSpacer id="IDGenToolbarSpacer12"/>
                    <OverflowToolbarButton id="idAddButton2" text="Add Luthier" type="Emphasized" icon="sap-icon://add" press="createLuthier"/>
                </OverflowToolbar>
            </VBox>
            <f:GridList id="gridList" mode="SingleSelectMaster" busyIndicatorDelay="true" items="{/LuthiersSet}" selectionChange="onPress" delete="onDelete" class="sapUiResponsiveContentPadding">
                <f:customLayout>
                    <grid:GridBasicLayout id="_IDGenGridBasicLayout1" gridTemplateColumns="repeat(auto-fit, minmax(12rem, 1fr))" gridGap="1rem" />
                </f:customLayout>
                <f:GridListItem id="_IDGenGridListItem1" detailPress="onDetailPress" press="onPress" counter="{Quantity}" highlight="{Status}" type="{type}">
                    <VBox id="_IDGenVBox1" height="100%">
                        <Image id="_IDGenImage1" src="/images/logo.png" width="100%" class="imageDisplayBlock" />
                        <HBox id="_IDGenHBox2" height="100%" class="sapUiSmallMargin" alignItems="Center" visible="{= ${onlyImage} ? false : true }">
                            <Image id="_IDGenImage2" src="/images/logo.png" width="3rem" class="sapUiSmallMarginEnd" />
                            <VBox id="_IDGenVBox4" width="100%" direction="Row" justifyContent="SpaceBetween">
                                <VBox id="_IDGenVBox2" alignContent="Stretch">
                                    <Title id="_IDGenTitle1" text="{Nombre}" wrapping="true" />
                                    <Label id="_IDGenLabel1" text="{Apellido}" wrapping="true" />
                                </VBox>
                                <VBox id="_IDGenVBox3">
                                    <Button id="_IDGenButton4" type="Default" icon="sap-icon://edit"/>
                                </VBox>
                            </VBox>
                        </HBox>
                    </VBox>
                </f:GridListItem>
            </f:GridList>
        </ScrollContainer>
    </l:VerticalLayout >
</mvc:View>
