<mvc:View height="100%" controllerName="aca20241q.controller.Table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <NavContainer id="navCon">
        <Page id="table" showHeader="false">
            <Table id="idProductsTable" items="{/LuthiersSet}">
                <headerToolbar>
                    <OverflowToolbar id="_IDGenOverflowToolbar1">
                        <Title id="_IDGenTitle1" text="Luthier´s" level="H2"/>
                        <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                        <OverflowToolbarButton id="idAddButton" type="Transparent" icon="sap-icon://add" press="handleNewItemAdd"/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="_IDGenColumn1" width="12em">
                        <Text id="_IDGenText1" text="Id Luthier"/>
                    </Column>
                    <Column id="_IDGenColumn2" width="12em">
                        <Text id="_IDGenText2" text="Nombre"/>
                    </Column>
                    <Column id="_IDGenColumn3" width="12em">
                        <Text id="_IDGenTextt3" text="Apellido"/>
                    </Column>
                    <Column id="_IDGenColumn4" width="12em">
                        <Text id="_IDGenTextt4" text="Localidad"/>
                    </Column>
                    <Column id="_IDGenColumn5" width="12em">
                        <Text id="_IDGenText5" text="Tipo"/>
                    </Column>
                    <Column id="_IDGenColumn6" width="12em">
                        <Text id="_IDGenText6" text="Descripción"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1">
                        <cells>
                            <Text id="IdLuthier" text="{IdLuthier}"/>
                            <Text id="Nombre" text="{Nombre}"/>
                            <Text id="Apellido" text="{Apellido}"/>
                            <Text id="Localidad" text="{Localidad}"/>
                            <Text id="Tipo_de_instrumento" text="{TipoInstrumento}"/>
                            <Text id="Descripcion" text="{Descripcion}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Page>
    </NavContainer>
</mvc:View>